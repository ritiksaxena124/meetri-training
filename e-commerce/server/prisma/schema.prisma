generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  hash      String
  phone     String
  // addressId Int      @default(-1)
  // address   Address  @relation(fields: [addressId], references: [id])
  // cart      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id           Int    @unique @default(autoincrement())
  addressLine1 String
  addressLine2 String
  city         String
  state        String
  postalCode   String
  country      String
  // User         User[]
}

model Product {
  id                 Int      @unique @default(autoincrement())
  name               String
  description        String
  price              Int
  category           String
  productImgURL      String
  discountPercentage Float
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
